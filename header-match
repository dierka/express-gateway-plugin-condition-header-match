module.exports = {
  name: 'url-match',
  schema: {
    $id: 'http://express-gateway.io/schemas/conditions/url-match.json',
    type: 'object',
    properties: {
      expected: {
        type: 'string'
      }
    },
    required: ['expected']
  },
  handler: function (req, conditionConfig) {
    return (conditionConfig.expected === req.url);
  }
};